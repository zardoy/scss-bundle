{
    "name": "@zardoy/scss-bundle",
    "version": "3.2.0",
    "description": "Modern, simple and configurable SCSS bundler",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "start": "node dist/cli/main.js",
        "pretest": "tsc --noEmit && eslint \"src/**/*.ts*\"",
        "test": "echo \"TODO\"",
        "build-tests": "test-generator-cli"
    },
    "keywords": [
        "scss",
        "bundle",
        "sass",
        "import",
        "node-sass"
    ],
    "files": [
        "build"
    ],
    "bin": {
        "scss-bundle": "dist/cli/main.js"
    },
    "author": "Vitaly Turovsky",
    "license": "MIT",
    "devDependencies": {
        "@reactway/eslint-config": "^1.0.0-alpha.2",
        "@simplrjs/test-generator-cli": "^0.1.3",
        "@types/jest": "^24.0.23",
        "@zardoy/tsconfig": "^1.5.0",
        "eslint": "^6.7.2",
        "jest": "^24.9.0",
        "jest-junit": "^10.0.0",
        "ts-jest": "^24.2.0",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "@types/archy": "^0.0.31",
        "@types/debug": "^4.1.5",
        "@types/fs-extra": "^8.0.1",
        "@types/glob": "^7.1.1",
        "@types/lodash.debounce": "^4.0.6",
        "@types/sass": "^1.16.0",
        "archy": "^1.0.0",
        "chalk": "^3.0.0",
        "chokidar": "^3.3.1",
        "commander": "^4.0.1",
        "fs-extra": "^8.1.0",
        "globs": "^0.1.4",
        "lodash.debounce": "^4.0.8",
        "loglevel": "^1.6.6",
        "loglevel-plugin-prefix": "^0.8.4",
        "pretty-bytes": "^5.3.0",
        "sass": "^1.23.7",
        "tslib": "^1.10.0"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts",
            "!src/cli/**/*"
        ],
        "coverageReporters": [
            "cobertura"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "./tests/tsconfig.json"
            }
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 150
    }
}
